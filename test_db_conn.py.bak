from app.db.connector import get_conn, DB_PATH

with get_conn() as c:
    rows = c.execute(
        "SELECT name, type FROM sqlite_master "
        "WHERE type IN ('table','view') AND name NOT LIKE 'sqlite_%' ORDER BY name"
    ).fetchall()

print("âœ… Connected to:", DB_PATH)
print("Tables/Views:")
for name, typ in rows:
    print(f" - {name} ({typ})")
